typedef struct LyN_File //Doesn't match RLand but works :shrug:
{
    struct
    {
        char name[NAME_MAX]; //This is a null terminated string padded but officially read as large char :shrug:, this format is dumb, incomplete file names can be here too, joy.
        if (isZombiU)
        {
            uint64 diskLen;
            uint64 dmy;
            uint64 userLen;
            LyN_Int64 index;
            if (DEBUG_PRINT && diskLen != 0xFAFAFAFAFAFAFAFA) Printf("\t\t%s | Archived File Size: %i | Decompresed File Size: %i\n", name, diskLen, userLen);
        }
        else
        {
            char owner[CONNECT_NAME_MAX];
            long handleParentDirectory;
            long handleNextFile;
            uint32 diskLen; //Arch file header + file compressed + padding in this bigfile
            FILETIME time; //This looks like it's filetime.
            LyN_HandleKey handleKey; //In NewLyN this might point to an external bigfile, s*_%i.lin.bf (Wor and Tex).
            LyN_Int64 position;
            uint16 flags;
            uint16 vFlags;
            uint32 userLen; //File decomp size
            uint16 headFlags;
            uint16 privateRevision;
            uint32 checksum[2];
            uint32 rev;
            char ownerClientName[NAME_MAX];
        }
    } Define;
    if (Define.name[0] > 0 && !isZombiU) //The fact the archives can contain this much padding is such a waste of space. At least someone might be able to make use of the slots to make a custom entry.
    {
        FPos = FTell();
        FSeek(Define.position.low);
        if (DEBUG_PRINT) Printf("\t\t%s", Define.name);
        struct
        {
            if (Define.diskLen != Define.userLen) //Todo maybe move this?
            {
                LyN_ArchivedFileHeader ArchivedFileHeader<bgcolor=cBlue>;
                if (ArchivedFileHeader.flags & LyN_ArchivedFileFlags_LZO1X) //WIP
                {
                    LyN_CompressedBin CompressedBin;
                    if (DEBUG_PRINT)
                    {
                        Printf(" | Version: %i | Bin Blocks: %i", CompressedBin.ver, CompressedBin.blocks);
                        for (i = 0; i < CompressedBin.blocks; i++)
                        {
                            Printf(" | %i | Block Size: %i", i, CompressedBin.size[i]);
                        }
                        i = 0;
                    }
                }
                else if (ArchivedFileHeader.archivedFileLen) byte ArchivedFile[ArchivedFileHeader.archivedFileLen]<bgcolor=cGreen>; //Maybe
                if (ArchivedFileHeader.lenRef) byte Reference[ArchivedFileHeader.lenRef]<bgcolor=cRed>;
                if (Define.diskLen != (ArchivedFileHeader.archivedFileLen + ArchivedFileHeader.lenRef + sizeof(ArchivedFileHeader))) ubyte Padding[Define.diskLen - (ArchivedFileHeader.archivedFileLen + ArchivedFileHeader.lenRef + sizeof(ArchivedFileHeader))]<bgcolor=cRed>; //Useless BUT maybe
                if (DEBUG_PRINT) Printf(" | Archived File Size: %i | Reference Size: %i | Archived File Flags: %s | Padding Size: %i", LyN_FileData.ArchivedFileHeader.archivedFileLen, LyN_FileData.ArchivedFileHeader.lenRef, EnumToString(LyN_FileData.ArchivedFileHeader.flags), Define.diskLen - (ArchivedFileHeader.archivedFileLen + ArchivedFileHeader.lenRef + sizeof(ArchivedFileHeader)));
                //totalPadding += Define.diskLen - (ArchivedFileHeader.archivedFileLen + ArchivedFileHeader.lenRef + sizeof(ArchivedFileHeader));
                //if (DEBUG_PRINT) Printf("\t\t%s | Archived File Size: %i | Decompresed File Size: %i | Reference Size: %i | Handle ID: 0x%X | Flags: 0x%X | Volatile Flags: 0x%X | Archived File Flags: 0x%X | Header Flags: 0x%X | Directory ID: %i | Offset: 0x%lx | Owner Client: %s | Write Time: %s\n", Define.name, LyN_FileData.ArchivedFileHeader.archivedFileLen, Define.userLen, LyN_FileData.ArchivedFileHeader.lenRef, Define.handleKey, Define.flags, Define.vFlags, LyN_FileData.ArchivedFileHeader.flags, Define.headFlags, Define.handleParentDirectory, Define.position.low, Define.ownerClientName, FileTimeToString(Define.time));
                //if (DEBUG_PRINT) Printf("\t\t%s | Archived File Size: %i | Decompresed File Size: %i | Reference Size: %i | Handle ID: 0x%X | Flags: 0x%X | Volatile Flags: 0x%X | Archived File Flags: 0x%X | Header Flags: 0x%X | Directory ID: %i | Offset: 0x%lx | Owner Client: %s | Write Time: %s\n", Define.name, LyN_FileData.ArchivedFileHeader.archivedFileLen, Define.userLen, LyN_FileData.ArchivedFileHeader.lenRef, Define.handleKey, Define.flags, Define.vFlags, LyN_FileData.ArchivedFileHeader.flags, Define.headFlags, Define.handleParentDirectory, Define.position.low, Define.ownerClientName, FileTimeToString(Define.time));
                //if (DEBUG_PRINT) Printf("\t\t%s = 0x%LX\n", Define.name, Define.handleKey); //Dump handlekeys
                //if (DEBUG_PRINT) Printf("\t\t%s (0x%X) = %s\n", Define.name, Define.handleKey, FileTimeToString(Define.time)); //Dump dates
                //if (DEBUG_PRINT) Printf("\t\t%s = %s\n", Define.name, FileTimeToString(Define.time)); //Dump dates no key
            }
            else
            {
                byte RawFile[Define.diskLen]<bgcolor=cPurple>;
                //if (DEBUG_PRINT) Printf("\t\t%s | Raw File Size: %i | Directory ID: %i | Offset: 0x%lx\n", Define.name, Define.diskLen, Define.handleParentDirectory, Define.position.low);
            }
            //TODO SECOND PRINT
            if (DEBUG_PRINT) Printf(" | Disk Write File Size: %i | Standalone File Size: %i | Handle ID: 0x%X | Flags: 0x%X | Volatile Flags: 0x%X | Header Flags: 0x%X | Directory ID: %i | Offset: 0x%lx | Owner: %s | Owner Client: %s | Write Time: %s\n", Define.diskLen, Define.userLen, Define.handleKey, Define.flags, Define.vFlags, Define.headFlags, Define.handleParentDirectory, Define.position.low, Define.owner, Define.ownerClientName, FileTimeToString(Define.time));
        } LyN_FileData<hidden=false>;
        FSeek(FPos);
    }
};

