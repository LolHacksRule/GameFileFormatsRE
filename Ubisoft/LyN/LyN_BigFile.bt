typedef struct LyN_CompressedBin
{
    if (Header.ver != 4) uint32 ver; //1
    uint32 blocks;
    uint32 size[blocks];
    struct
    {
        ubyte data[size[i] ? size[i] : 0x3fffc];
        i++;
    } Block[blocks]<optimize=false>;
    i = 0;
};

typedef struct LyN_ArchivedFileHeader
{
    uint32 archivedFileLen; //Size of archived file
    uint32 userLen; //Decomp sz
    uint32 lenRef; //References size
    LyN_ArchivedFileFlags flags;
    uint32 rawFileLen;
    LyN_Int64 nextPosition;
    LyN_HandleKey fileHandle;
};

typedef struct LyN_FatDescriptor
{
