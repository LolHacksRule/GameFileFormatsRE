        savepos OFFSET MEMORY_FILE
        encryption "CipherFinal aes-256-cbc" KEY "" 0 32
        log MEMORY_FILE 0 SIZE
        get SIZE asize MEMORY_FILE
        encryption "" ""
        comtype lzma_dynamic
        math SIZE - OFFSET
        clog NAME OFFSET SIZE SIZE MEMORY_FILE
        cleanexit
