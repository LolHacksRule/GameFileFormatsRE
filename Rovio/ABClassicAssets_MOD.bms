    if KEY == ""
        cleanexit
    endif
    encryption "CipherFinal aes-256-cbc" KEY "" 0 32
    log MEMORY_FILE 0 SIZE
    getdstring TEST 6 MEMORY_FILE
    if TEST u== 7z_MAGIC
        encryption "CipherFinal aes-256-cbc" KEY "" 0 32
        string NAME + ".7z"
